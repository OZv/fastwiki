<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.hace.fastwiki"
      android:versionCode="22"
      android:versionName="2.2.7beta9">

	  <supports-screens
		  android:xlargeScreens="true"
		  android:largeScreens="true"
		  android:normalScreens="true"
		  android:smallScreens="true"
		  android:anyDensity="true"
		  />

	<uses-sdk android:minSdkVersion="3" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:hardwareAccelerated="true">
        <activity android:configChanges="orientation|keyboardHidden" android:name=".FastWiki"
				android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:configChanges="orientation|keyboardHidden" android:name=".MyFileManager"
                  android:label="@string/app_name">
        </activity>
        <activity android:configChanges="orientation|keyboardHidden" android:name=".FastWikiAbout"
                  android:label="@string/app_name">
        </activity>

        <activity android:configChanges="orientation|keyboardHidden" android:name=".History"
                  android:label="@string/app_name">
        </activity>

        <activity android:configChanges="orientation|keyboardHidden" android:name=".Favorite"
                  android:label="@string/app_name">
        </activity>

    </application>
	<uses-permission android:name="android.permission.INTERNET" />

</manifest>
